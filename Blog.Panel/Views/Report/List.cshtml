@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Report>
<div class="container">
    <h2>Rapor Listesi</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Rapor</th>
                <th>Tarih</th>
                <th>Statüs</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Content</td>
                    <td>@item.CreatedDateTime.ToString("dd MMMM yyyy", new CultureInfo("tr-TR"))</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <a href="/Report/CommentStatusChange/@item.Id" class="btn btn-success">Tamamlandı</a>
                        }
                        else
                        {
                            <a href="/Report/CommentStatusChange/@item.Id" class="btn btn-danger">Tamamlanmadı</a>
                        }
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>




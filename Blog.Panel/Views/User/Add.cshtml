@{
	ViewData["Title"] = "Add";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Kullanıcı Ekle</h2>
    <form asp-action="Add" asp-controller="User" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" name="Name" required>
        </div>
        <div class="form-group">
            <label>Surname:</label>
            <input type="text" class="form-control" name="Surname" required>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input type="email" class="form-control" name="Email">
        </div>
        <div class="form-group">
            <label>PaswortHas:</label>
            <input type="text" class="form-control" name="PaswortHas" required>
        </div>
        <div class="form-group">
            <label>ProfileImage:</label>
            <input type="file" class="form-control" name="CoverProfileImage" required>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>


@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model User
<div class="container">
    <h2>Kullanıcı Güncelle</h2>
    <form asp-action="Update" asp-controller="User" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" name="Name" required value="@Model.Name">
        </div>
        <div class="form-group">
            <label>Surname:</label>
            <input type="text" class="form-control" name="Surname" required value="@Model.Surname">
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input type="email" class="form-control" name="Email" value="@Model.Email">
        </div>
        <div class="form-group">
            <label>PaswortHas:</label>
            <input type="text" class="form-control" name="PaswortHas"  value="">
            <span>Bos geçilirse eski şifre geçerli olur.</span>
        </div>
        <div class="form-group">
            <label>ProfileImage:</label>
            <input type="file" class="form-control" name="CoverProfileImage" >
            <span>Bos geçilirse eski fotoğraf geçerli olur.</span>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>

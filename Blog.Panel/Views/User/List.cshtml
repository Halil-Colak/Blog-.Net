@using Blog.Helper
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<User>

<div class="container">
    <h2>Kulanıcı Listesi</h2>
    <a href="/User/Add">Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Email</th>
                <th>Foto</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>

                        <img style="    width: 50px;
    height: 50px;
    object-fit: contain;" src="@($"{AppConfig.WebUrl}{item.ProfileImage}")" />

                    </td>
                    <td>@item.CreatedDateTime.ToString("dd MMMM yyyy", new CultureInfo("tr-TR"))</td>
                    <td>
                        <a href="/Post/Update/@item.Id" class="btn btn-info">Düzenle</a>
                        @* <a href="/Post/Delete/@item.Id" class="btn btn-danger">Sil</a> *@
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
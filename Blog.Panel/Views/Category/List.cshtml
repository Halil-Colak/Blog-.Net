@{
	ViewData["Title"] = "List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Category>
<div class="container">
	<h2>Kategori Listesi</h2>
	<a href="/Category/Add">Ekle</a>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Kategori</th>
				<th>Tarih</th>
				<th>Statüs</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.CreatedDateTime.ToString("dd MMMM yyyy", new CultureInfo("tr-TR"))</td>
					<td>
						@if(item.IsActive){
							<a class="btn btn-success">Aktif</a>
						}else{
							<a class="btn btn-danger">Pasif</a>
						}
					</td>
					<td>
						<a href="/Category/Update/@item.Id" class="btn btn-info">Düzenle</a>
						@* <a href="/Category/Delete/@item.Id" class="btn btn-danger">Sil</a> *@
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>


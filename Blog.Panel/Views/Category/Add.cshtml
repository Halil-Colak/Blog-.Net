
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Katagori Ekle</h2>
    <form asp-action="Add" asp-controller="Category" method="post">
        <div class="form-group">
            <label>Kategori:</label>
            <input type="text" class="form-control"name="Name">
        </div>
        <div class="checkbox">
            <label><input type="checkbox" value="true" checked name="IsActive">Status (seçili ise aktif olur.)</label>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>



@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Blog>
<div class="container">
	<h2>Blog Listesi</h2>
	<a href="/Blog/Add">Ekle</a>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Başlık</th>
				<th>Açıklama</th>
				<th>Tarih</th>
				<th>Statüs</th>
				<th>Popüler</th>
				<th>İşlemler</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Title</td>
					<td>@item.Description</td>
					<td>@item.CreatedDateTime.ToString("dd MMMM yyyy", new CultureInfo("tr-TR"))</td>
					<td>
						@if (item.IsActive)
						{
							<a class="btn btn-success">Aktif</a>
						}
						else
						{
							<a class="btn btn-danger">Pasif</a>
						}
					</td>
					<td>
						@if (item.IsPopular)
						{
							<a class="btn btn-success">Aktif</a>
						}
						else
						{
							<a class="btn btn-danger">Pasif</a>
						}
					</td>
					<td>
						<a href="/Blog/Update/@item.Id" class="btn btn-info">Düzenle</a>
						@* <a href="/Blog/Delete/@item.Id" class="btn btn-danger">Sil</a> *@
					</td>
				</tr>
			}

		</tbody>
	</table>
</div>

